<!DOCTYPE html>
<html lang="ja">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= title %> | Markwhen Editor and Viewer</title>
        <link rel="stylesheet" href="/css/styles.css" />
        <% if (typeof user !== 'undefined') { %>
        <link rel="stylesheet" href="/css/admin.css" />
        <% } %> <% if (typeof customStyles !== 'undefined' && customStyles) { %>
        <link rel="stylesheet" href="<%= customStyles %>" />
        <% } %>
    </head>
    <body>
        <% if (typeof user !== 'undefined') { %>
        <div class="header-nav">
            <div class="nav-container">
                <div class="logo">
                    <a href="/">Markwhen Editor</a>
                </div>
                <div class="user-info">
                    <span><%= user.username %></span>
                    <div class="dropdown">
                        <button class="dropbtn">メニュー ▼</button>
                        <div class="dropdown-content">
                            <a href="/">エディター</a>
                            <a href="/profile">プロフィール</a>
                            <% if (user.isAdmin) { %>
                            <a href="/admin">管理パネル</a>
                            <% } %>
                            <div class="dropdown-divider"></div>
                            <a href="/logout">ログアウト</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <div class="main-content"><%- body %></div>

        <% if (typeof customScripts !== 'undefined' && customScripts) { %> <%
        customScripts.forEach(function(script) { %>
        <script src="<%= script %>"></script>
        <% }); %> <% } %>
    </body>
</html>
