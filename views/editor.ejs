<link rel="stylesheet" href="/css/styles.css" />

<div class="container">
    <!-- 共通ツールバー -->
    <div class="main-toolbar">
        <div class="document-info">
            <input
                type="text"
                id="document-title"
                placeholder="ドキュメントタイトル"
            />
            <input type="hidden" id="document-id" value="" />
        </div>
        <div class="toolbar-actions">
            <select id="document-select" class="document-select">
                <option value="">-- 保存済みファイル --</option>
                <!-- ドキュメントリストはJavaScriptで動的に読み込まれます -->
            </select>
            <button id="save-btn" class="btn">保存</button>
            <button id="example-btn" class="btn">サンプルを読み込む</button>
            <a href="/documents" class="btn">ファイル管理</a>
            <!-- 非表示のビュータイプ設定（常にtimeline） -->
            <input type="hidden" id="view-type" value="timeline" />
        </div>
    </div>
    <div class="content-container">
        <div class="editor-container">
            <div id="monaco-editor"></div>
            <div class="status" id="editor-status">Ready</div>
        </div>
        <div class="viewer-container">
            <iframe id="preview-frame"></iframe>
        </div>
    </div>
</div>
<!-- スクリプト -->
<script src="/socket.io/socket.io.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/monaco-editor/0.44.0/min/vs/loader.js"></script>
<script src="/js/app.js"></script>

<style>
    .document-info {
        display: flex;
        align-items: center;
    }

    #document-title {
        font-size: 16px;
        padding: 8px 12px;
        border: 1px solid #ddd;
        border-radius: 4px;
        width: 300px;
        margin-right: 8px;
    }

    .toolbar-actions {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .document-select {
        padding: 6px 12px;
        border: 1px solid #ddd;
        border-radius: 4px;
        min-width: 200px;
    }
</style>
