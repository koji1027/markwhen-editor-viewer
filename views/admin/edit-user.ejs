<%- include('../partials/header', { title: 'ユーザー編集', user: user }) %>

<div class="admin-container">
    <div class="admin-sidebar">
        <h3>管理メニュー</h3>
        <ul>
            <li><a href="/admin">ユーザー管理</a></li>
            <li><a href="/admin/add-user">新規ユーザー追加</a></li>
        </ul>
    </div>

    <div class="admin-content">
        <h1>ユーザー編集</h1>

        <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger">
            <% if (error === 'user_exists') { %>
            ユーザー名またはメールアドレスは既に使用されています <% } else { %>
            エラーが発生しました <% } %>
        </div>
        <% } %>

        <div class="admin-panel">
            <form
                action="/admin/edit-user/<%= editUser._id %>"
                method="POST"
                class="form"
            >
                <div class="form-group">
                    <label for="username">ユーザー名</label>
                    <input
                        type="text"
                        id="username"
                        name="username"
                        value="<%= editUser.username %>"
                        required
                    />
                </div>

                <div class="form-group">
                    <label for="email">メールアドレス</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        value="<%= editUser.email %>"
                        required
                    />
                </div>

                <div class="form-group">
                    <label for="password"
                        >パスワード (変更する場合のみ入力)</label
                    >
                    <input type="password" id="password" name="password" />
                    <small>空欄の場合はパスワードは変更されません</small>
                </div>

                <div class="form-group">
                    <label>権限</label>
                    <div class="radio-group">
                        <label>
                            <input type="radio" name="isAdmin" value="false" <%=
                            !editUser.isAdmin ? 'checked' : '' %>> 一般ユーザー
                        </label>
                        <label>
                            <input type="radio" name="isAdmin" value="true" <%=
                            editUser.isAdmin ? 'checked' : '' %>> 管理者
                        </label>
                    </div>
                </div>

                <div class="form-actions">
                    <a href="/admin" class="btn btn-secondary">キャンセル</a>
                    <button type="submit" class="btn btn-primary">保存</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
