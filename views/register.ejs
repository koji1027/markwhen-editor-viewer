<%- include('partials/auth_header', { title: '新規登録' }) %>

<div class="auth-container">
    <div class="auth-form-container">
        <div class="auth-header">
            <h1>アカウント作成</h1>
            <p>新しいアカウントを作成してください</p>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger">
            <% if (error === 'all_fields_required') { %>
            すべての項目を入力してください <% } else if (error ===
            'passwords_dont_match') { %> パスワードが一致しません <% } else if
            (error === 'password_too_short') { %>
            パスワードは8文字以上にしてください <% } else if (error ===
            'user_exists') { %>
            ユーザー名またはメールアドレスは既に使用されています <% } else if
            (error === 'server_error') { %> サーバーでエラーが発生しました <% }
            %>
        </div>
        <% } %>

        <form action="/register" method="POST" class="auth-form">
            <div class="form-group">
                <label for="username">ユーザー名</label>
                <input type="text" id="username" name="username" required />
            </div>

            <div class="form-group">
                <label for="email">メールアドレス</label>
                <input type="email" id="email" name="email" required />
            </div>

            <div class="form-group">
                <label for="password">パスワード</label>
                <input type="password" id="password" name="password" required />
                <small>8文字以上で入力してください</small>
            </div>

            <div class="form-group">
                <label for="confirmPassword">パスワード(確認)</label>
                <input
                    type="password"
                    id="confirmPassword"
                    name="confirmPassword"
                    required
                />
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">登録</button>
            </div>
        </form>

        <div class="auth-footer">
            <p>
                すでにアカウントをお持ちの方は
                <a href="/login">ログイン</a> してください
            </p>
        </div>
    </div>
</div>

<%- include('partials/auth_footer') %>
